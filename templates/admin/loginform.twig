<!DOCTYPE html>
<html lang="{{ config.lang }}">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title></title>
  <!-- Custom styles for this template-->
  <link href="{{ config.hostaddr }}templates/frontend/sbadmin2/css/sb-admin-2.min.css" rel="stylesheet">
  <link href="{{ config.hostaddr }}vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
  <link href="{{ config.hostaddr }}vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


</head>

<body class="bg-dark">
  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-6 col-lg-6 col-md-6">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">{{ strings.login.title }}</h1>
                  </div>
                  {{ error_msg }}
                  <form class="user" action="{{ formurl }}" method="post">
                    <div class="form-group">
                      <input type="text" name="login" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="{{ strings.login.userlabel }}">
                    </div>
                    <div class="form-group">
                      <input type="password" name="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="{{ strings.login.passlabel }}" required>
                    </div>
                    <input type="hidden" name="formtoken" value="{{ formtoken }}">
                    <input type="hidden" name="refurl" value="{{ refurl }}">
                    <button  type="submit" class="btn btn-primary btn-user btn-block">
                      {{ strings.login.loginbtn }}
                    </button>
                  </form>
                  <hr>
                  <div class="text-center">
                    <a class="small" href="forgot-password.html">Forgot Password?</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="{{ config.hostaddr }}templates/admin/sbadmin2/js/sb-admin-2.min.js"></script>
  <script src="{{config.hostaddr }}vendor/jquery/jquery.min.js"></script>
  <script src="{{config.hostaddr }}vendor/jquery/popper.js"></script>
  <script src="{{config.hostaddr }}vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
